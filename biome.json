{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 80
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedImports": "error"
      }
    }
  },
  "files": {
    "ignoreUnknown": true,
    "ignore": [
      "./.next",
      "./src/app/examples/_generated/*.json",
      "node_modules/**",
      "./src/components/ui/**"
    ]
  }
}
