{
	"version": 2,
	"buildCommand": "bun run build",
	"devCommand": "bun run dev",
	"installCommand": "bun install",
	"framework": "nextjs",
	"outputDirectory": ".next",
	"public": true,
	"regions": ["fra1"],
	"headers": [
		{
			"source": "/(.*)",
			"headers": [
				{
					"key": "X-Content-Type-Options",
					"value": "nosniff"
				},
				{
					"key": "X-Frame-Options",
					"value": "DENY"
				},
				{
					"key": "X-XSS-Protection",
					"value": "1; mode=block"
				}
			]
		},
		{
			"source": "/api/(.*)",
			"headers": [
				{
					"key": "Cache-Control",
					"value": "no-store, max-age=0"
				}
			]
		},
		{
			"source": "/(.*)\\.(jpg|jpeg|gif|png|svg|ico|webp|js|css|woff|woff2|ttf|eot)",
			"headers": [
				{
					"key": "Cache-Control",
					"value": "public, max-age=31536000, immutable"
				}
			]
		}
	],
	"rewrites": [
		{
			"source": "/((?!api/.*|_next/.*|.*\\.[^/]*$).*)",
			"destination": "/[locale]/$1",
			"has": [
				{
					"type": "cookie",
					"key": "NEXT_LOCALE",
					"value": "(?<locale>.*)"
				}
			]
		},
		{
			"source": "/((?!api/.*|_next/.*|.*\\.[^/]*$).*)",
			"destination": "/en/$1"
		}
	],
	"cleanUrls": true,
	"trailingSlash": false
}
